<Page x:Class="BetonQuest_Editor_Seasonal.pages.online.ConnectingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BetonQuest_Editor_Seasonal.pages.online"
      mc:Ignorable="d" 
      Background="{StaticResource Background}"
      d:DesignHeight="600" d:DesignWidth="800"
      Title="ConnectingPage">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

        <TextBlock Name="Title" Style="{StaticResource DefaultText73}" FontSize="25" TextAlignment="Center"> BQE ONLINE </TextBlock>
        <TextBlock Name="Description" Style="{StaticResource DefaultText73}" FontSize="20" TextAlignment="Center"> Connecting... </TextBlock>

        <Button Name="OKButton" Style="{StaticResource ModernButtonStyle}" FontSize="15" Margin="0, 10, 0, 0" IsEnabled="False" Width="100" Padding="5" Opacity="0" BorderBrush="Firebrick" Foreground="Firebrick" Cursor="Hand" Click="OKButton_Click"> OK </Button>
        
    </StackPanel>
    
</Page>
