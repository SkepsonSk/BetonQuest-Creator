<UserControl x:Class="BetonQuest_Editor_Seasonal.controls.mini.PropertyNegableSelectingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BetonQuest_Editor_Seasonal.controls.mini"
             mc:Ignorable="d"  
             Background="#a6a6a6"
             Margin="0, 0, 0, 5"
             d:DesignHeight="40" d:DesignWidth="100">

    <DockPanel Background="Transparent" Cursor="Hand" MouseDown="Select">

        <Button Name="Negation" Background="#a6a6a6" FontFamily="Segoe UI Light" FontSize="15" Foreground="#737373" BorderThickness="0" Padding="15, 0, 15, 0" DockPanel.Dock="Right" Click="Negation_Click"> ! </Button>
        <TextBlock Name="Title" VerticalAlignment="Center" FontFamily="Segoe UI Light" FontSize="15" Foreground="#737373" Margin="10"> TITLE </TextBlock>
        
    </DockPanel>
    
</UserControl>
